<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.zhgeaits.risv.VideoImageSeekbar
        android:id="@+id/image_bar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_above="@+id/button_container"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/add_range_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="markbar" />

            <Button
                android:id="@+id/add_range_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="markpoint" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/window"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="addWindow" />

            <Button
                android:id="@+id/fixed_window"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="addFixedWindow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/set_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="setImage" />

            <Button
                android:id="@+id/remove_window"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="removeWindow" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
